<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1">
    <!-- the font awesome library is used to add icons to our form -->
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <title>Video Streaming</title>
</head>
<body>
    <div class="navbar">
        <a href="http://localhost:3000/home">Upload</a>
        <a href="http://localhost:3001/<%= user %>">Stream</a>
        <a href="http://localhost:3000/logout">Logout</a>
    </div>
    <h1>Welcome <%= user %></h1>
    <% videoFiles.forEach(function(videoFile) { %>
        <video width='500' height='300' controls>
            <source src="http://localhost:3002/video/<%= videoFile %>" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    <% }); %>
</body>
</html>
